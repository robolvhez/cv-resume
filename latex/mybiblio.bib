@article{akbari2022-diabetes,
  title = {Multiancestry Exome Sequencing Reveals {{INHBE}} Mutations Associated with Favorable Fat Distribution and Protection from Diabetes},
  author = {Akbari, Parsa and Sosina, Olukayode A. and Bovijn, Jonas and Landheer, Karl and Nielsen, Jonas B. and Kim, Minhee and Aykul, Senem and De, Tanima and Haas, Mary E. and Hindy, George and Lin, Nan and Dinsmore, Ian R. and Luo, Jonathan Z. and Hectors, Stefanie and Geraghty, Benjamin and Germino, Mary and Panagis, Lampros and Parasoglou, Prodromos and Walls, Johnathon R. and Halasz, Gabor and Atwal, Gurinder S. and Della Gatta, Giusy and Jones, Marcus and LeBlanc, Michelle G. and Still, Christopher D. and Carey, David J. and Giontella, Alice and Orho-Melander, Marju and Berumen, Jaime and Kuri-Morales, Pablo and Alegre-Díaz, Jesus and Torres, Jason M. and Emberson, Jonathan R. and Collins, Rory and Rader, Daniel J. and Zambrowicz, Brian and Murphy, Andrew J. and Balasubramanian, Suganthi and Overton, John D. and Reid, Jeffrey G. and Shuldiner, Alan R. and Cantor, Michael and Abecasis, Goncalo R. and Ferreira, Manuel A. R. and Sleeman, Mark W. and Gusarova, Viktoria and Altarejos, Judith and Harris, Charles and Economides, Aris N. and Idone, Vincent and Karalis, Katia and Della Gatta, Giusy and Mirshahi, Tooraj and Yancopoulos, George D. and Melander, Olle and Marchini, Jonathan and Tapia-Conyer, Roberto and Locke, Adam E. and Baras, Aris and Verweij, Niek and Lotta, Luca A.},
