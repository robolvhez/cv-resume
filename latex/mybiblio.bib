@article{peterson2017-population-stratification,
  title = {The Utility of Empirically Assigning Ancestry Groups in Cross-Population Genetic Studies of Addiction},
  author = {Peterson, Roseann E. and Edwards, Alexis C. and Bacanu, Silviu-Alin and Dick, Danielle M. and Kendler, Kenneth S. and Webb, Bradley T.},
