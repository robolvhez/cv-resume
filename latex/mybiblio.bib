@article{ringbauer2024-population-genetics,
  title = {Accurate Detection of Identity-by-Descent Segments in Human Ancient {{DNA}}},
  author = {Ringbauer, Harald and Huang, Yilei and Akbari, Ali and Mallick, Swapan and Olalde, Iñigo and Patterson, Nick and Reich, David},
