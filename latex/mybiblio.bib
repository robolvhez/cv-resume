@article{hinte2024-endocrine-system,
  title = {Adipose Tissue Retains an Epigenetic Memory of Obesity after Weight Loss},
  author = {Hinte, Laura C. and Castellano-Castillo, Daniel and Ghosh, Adhideb and Melrose, Kate and Gasser, Emanuel and Noé, Falko and Massier, Lucas and Dong, Hua and Sun, Wenfei and Hoffmann, Anne and Wolfrum, Christian and Rydén, Mikael and Mejhert, Niklas and Blüher, Matthias and family=Meyenn, given=Ferdinand, prefix=von, useprefix=true},
